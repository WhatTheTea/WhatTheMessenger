@using WhatTheMessenger.Server.App.Components
@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row-nav ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">WhatTheMessenger</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable overflow-x-hidden" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column h-100">
        <AuthorizeView>
            <Authorized>
                <Chats />
                <div class="nav-item px-3 mt-auto">
                    <NavLink class="nav-link" href="/auth/logout">
                        <span class="bi bi-person-nav-menu" />Logout
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="mt-auto">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/auth/login">
                            <span class="bi bi-person-nav-menu" />Login
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/auth/register">
                            <span class="bi-plus-square-fill-nav-menu"/>
                            <div class="mx-1">Register</div>
                        </NavLink>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}